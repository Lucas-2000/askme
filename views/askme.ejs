<%- include ('partials/header.ejs') %>
<body>
  <%- include ('partials/navbar.ejs') %>
  <div class="container">
    <div class="card" id="askme-form">
      <div class="card-header">
        <h3>Ask me</h3>
      </div>
      <div class="card-body">
        <form method="POST" action="/save">
          <label>Title</label>
          <input class="form-control" type="text" name="title" placeholder="Input the title here..." required>
          <br>
          <label>Question</label>
          <textarea class="form-control" name="question" placeholder="Input your question here..." required></textarea>
          <br>
          <button class="btn btn-dark">Ask</button>
        </form>
      </div>
    </div>
  </div>
  <%- include ('partials/footer.ejs') %>
</body>